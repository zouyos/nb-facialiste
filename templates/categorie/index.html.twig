{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| Gestion des Catégories
{% endblock %}

{% block heading %}
	Gestion des Catégories
{% endblock %}

{% block main %}

	{% include "inc/_flash.html.twig" %}

	<div class="my-3 d-flex align-items-center flex-wrap">
		<a href="{{ path('app_categorie_new') }}" class="custom-btn primary me-2">Ajouter une catégorie</a>
		<a href="{{ path('app_article_index') }}" class="custom-btn secondary">Retour gestion des articles</a>
	</div>

	<div class="container my-5 mx-auto">
		<table class="table">
			<thead>
				<tr valign="middle">
					<th>Titre</th>
					<th>Date de création</th>
					<th>Date de modifictation</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for categorie in categories %}
					<tr valign="middle">
						<td>{{ categorie.titre }}</td>
						<td>{{ categorie.createdAt ? categorie.createdAt|date('d/m/Y à H:i') : '' }}</td>
						<td>{{ categorie.modifiedAt ? categorie.modifiedAt|date('d/m/Y à H:i') : '' }}</td>
						<td>
							<div class="flex">
								<a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="custom-btn secondary me-2">Modifier</a>
								{{ include('categorie/_delete_form.html.twig') }}
							</div>
						</td>
					</tr>
				{% else %}
					<tr valign="middle">
						<td colspan="4" class="fst-italic">Aucune catégorie trouvée.</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
