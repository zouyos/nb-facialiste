{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| {{article.titre}}
{% endblock %}

{% block heading %}
	{{article.titre}}
{% endblock %}

{% block main %}

	<article class="container mb-3">
		{% if article.imageName %}
			<div class="flex my-3">
				<img src="{{ vich_uploader_asset(article, 'imageFile') | imagine_filter('resize800') }}" alt="{{article.titre}}" class="rounded-3">
			</div>
		{% endif %}
		<p class="text-justify my-4">{{ article.content|raw|nl2br }}</p>
		<p class="fs-sm fst-italic">
			Article publi√© le
			{{ article.createdAt|date('d/m/Y') }}
		</p>
		<a href="{{ path('app_articles') }}" class="custom-btn secondary my-3">Tous les articles</a>
	</article>

{% endblock %}
