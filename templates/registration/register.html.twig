{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	| Inscription
{% endblock %}

{% block heading %}
	Inscription
{% endblock %}

{% block main %}
	{% if app.user %}
		<div class="my-5 text-center">
			<p>
				Vous êtes déjà connectés en tant que :
				{{ app.user.userIdentifier }}
			</p>
			<p>
				<a href="{{ path('app_logout') }}">Déconnexion</a>
			</p>
		</div>
	{% else %}
		<div class="container my-5">
			{{ form_start(registrationForm) }}
			<div class="my-3">
				{{ form_label(registrationForm.sexe) }}
				{{ form_widget(registrationForm.sexe) }}
				{{ form_errors(registrationForm.sexe) }}
			</div>
			{{ form_row(registrationForm.nom) }}
			{{ form_row(registrationForm.prenom, { label: 'Prénom'}) }}
			{{ form_row(registrationForm.email) }}
			{{ form_row(registrationForm.plainPassword, { label: 'Mot de passe'}) }}
			{{ form_row(registrationForm.agreeTerms, { label: 'J\'ai pris connaissance des conditions ci-après et les accepte.'}) }}
      <p><a href="{{path('app_cgu')}}">CGU</a> / <a href="{{path('app_confidentialite')}}">Politique de confidentialité</a></p>
		  <button type="submit" class="custom-btn primary">S'ínscrire</button>
	{{ form_end(registrationForm) }}
		</div>
	{% endif %}
{% endblock %}
