{% extends "base.html.twig" %}

{% block title %}Modifier votre mot de passe
{% endblock %}

{% block heading %}Modifier votre mot de passe
{% endblock %}

{% block main %}
	<div class="container p-5 border border-2 rounded col-md-4 my-5 mx-auto">
		{{form_start(form)}}
		<div class="mb-3">
			{{form_label(form.plainPassword)}}
			{{form_errors(form.plainPassword)}}
			{{form_widget(form.plainPassword)}}
		</div>
		<div>
			{{form_row(form.updatePassword)}}
		</div>
		<input type="submit" value="Modifier" class="custom-btn primary my-1">
		{{form_end(form)}}
		<a href="{{path('app_profil_edit')}}" class="custom-btn tertiary">Retour à l'édition</a>
	</div>
{% endblock %}
