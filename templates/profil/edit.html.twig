{% extends "base.html.twig" %}

{% block title %}
	{{parent()}}
	| Édition Profil
{% endblock %}

{% block heading %}
	Édition Profil
{% endblock %}

{% block main %}

	{% include "inc/_flash.html.twig" %}

	<div class="container p-5 border border-2 rounded col-md-4 my-5 mx-auto">
		{{form_start(form)}}
		{{ form_row(form.sexe, { placeholder: none }) }}
		{{ form_row(form.nom) }}
		{{ form_row(form.prenom, { label: 'Prénom'}) }}
		{{ form_row(form.email) }}
		{{ form_row(form.plainPassword, { label: 'Saisir votre mot de passe pour confirmer la modification', label_attr: {'class': 'fs-sm text-secondary fst-italic'} }) }}
		<div class="flex">
			<button class="custom-btn primary my-2" type="submit">{{button_label|default('Mettre à jour')}}</button>
			<a href="{{path('app_profil_edit_password')}}" class="custom-btn cancel my-2">Modifier le mot de passe</a>
			<a href="{{path('app_profil')}}" class="custom-btn secondary my-2">Retour au profil</a>
		</div>
		{{form_end(form)}}
	</div>
{% endblock %}
