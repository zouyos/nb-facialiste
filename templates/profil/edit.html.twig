{% extends "base.html.twig" %}

{% block title %}
	{{parent()}}
	| Édition Profil
{% endblock %}

{% block heading %}
	Édition Profil
{% endblock %}

{% block main %}

	{% include "inc/_flash.html.twig" %}

	<div class="container p-5 border border-2 rounded col-md-4 my-5 mx-auto">
		{{form_start(form)}}
		{{ form_row(form.sexe, { placeholder: none }) }}
		{{ form_row(form.nom) }}
		{{ form_row(form.prenom, { label: 'Prénom'}) }}
		{{ form_row(form.email) }}
		<div class="mb-3">
			{{form_label(form.plainPassword, 'Saisir votre mot de passe pour confirmer la modification', {'label_attr': {'class': 'fs-sm text-secondary fst-italic'}}) }}
			{{form_errors(form.plainPassword)}}
			{{form_widget(form.plainPassword)}}
		</div>
		<button class="custom-btn primary me-1" type="submit">{{button_label|default('Mettre à jour')}}</button>
		<a href="{{path('app_profil')}}" class="custom-btn tertiary">Retour au profil</a>
		<div class="my-2">
			<a href="{{path('app_profil_edit_password')}}" class="custom-btn secondary">Modifier le mot de passe</a>
		</div>
		{{form_end(form)}}
	</div>
{% endblock %}
